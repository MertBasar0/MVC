@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication13_OdevValidationControll.Models.User


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet"/>
    <title>Bootstrap demo</title>
  </head>
  <body>
    <div class="container">
  <div class="row">
    <div class="col">
<form asp-controller="User" asp-action="index" asp-metod="post">
  <div class="col-md-6">
    <label  class="form-label">FirstName</label>
    <input type="text" asp-for="FirstName" class="form-control" >
    <div class="valid-feedback">
        <span class="alert alert-primary"  asp-validation-for="FirstName" role="alert"></span>
    </div>
  </div>
  <div class="col-md-6">
    <label class="form-label">LastName</label>
    <input type="text" asp-for="LastName" class="form-control" >
        <span asp-validation-for="LastName"></span>
  </div>
  <div class="col-md-6">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Mail">
        <span asp-validation-for="Mail"></span>

  </div>
  <div class="col-12">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address" placeholder="1234 Main St">
    <div class="valid-feedback">
        <span asp-validation-for="Address"></span>
    </div>
  </div>
  <div class="col-12">
    <label class="form-label">Teleophone</label>
    <input type="text" asp-for="Telephone" class="form-control" >
    <div class="valid-feedback">
        <span asp-validation-for="Telephone"></span>
    </div>
  </div>
  <div class="col-12">
    <label class="form-label">CreditCard</label>
    <input type="text" asp-for="CreditCard" class="form-control" >
    <div class="valid-feedback">
        <span asp-validation-for="CreditCard"></span>
    </div>
  </div>
  <div class="col-12">
    <label class="form-label">Height</label>
    <input type="text" asp-for="Height" class="form-control" >
    <div class="valid-feedback">
        <span asp-validation-for="Height"></span>
    </div>
  </div>
  <br/>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Kaydet</button>
  </div>
</form>
    </div>
  </div>
</div>
<div class=row>
    <h1>@ViewBag.hatamesaj</h1>
</div>
  </body>
</html>